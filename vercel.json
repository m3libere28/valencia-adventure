{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ],
    "env": {
        "MONGODB_URI": "@mongodb_uri",
        "AUTH0_SECRET": "@auth0_secret",
        "AUTH0_CLIENT_ID": "@auth0_client_id",
        "AUTH0_DOMAIN": "@auth0_domain",
        "WEATHER_API_KEY": "@weather_api_key",
        "BASE_URL": "@base_url"
    }
}
